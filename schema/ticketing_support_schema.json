{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ticketing support dump schema",
  "description": "This schema describes the accepted format of ticketing supports dumps defined by the CN03/GT4 group.",
  "type": "object",
  "properties": {
    "technical_data": {
      "type": "object",
      "properties": {
        "dump_info": {
          "$ref": "#/definitions/dump_info"
        },
        "family": {
          "type": "string",
          "enum": [
            "CalypsoPO"
          ]
        },
        "communication": {
          "$ref": "#/definitions/communication"
        }
      },
      "required": ["dump_info", "family"]
    },
    "dump_data": {
      "type": "object"
    }
  },
  "oneOf": [
    {
      "properties": {
        "technical_data": {
          "properties": {
            "family": {
              "const": "CalypsoPO"
            }
          }
        },
        "dump_data": {
          "$ref": "#/definitions/CalypsoPO"
        }
      }
    }
  ],
  "definitions": {
    "two_bytes": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{4}$"
    },
    "four_bytes": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}$"
    },
    "hex_string": {
      "type": "string",
      "pattern": "^(?:[0-9a-fA-F]{2})+$"
    },
    "byte": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{2}$"
    },
    "access_conditions": {
      "$ref": "#/definitions/four_bytes"
    },
    "key_indexes":{
      "$ref": "#/definitions/four_bytes"
    },
    "EF": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/EF_with_records"
        },
        {
          "$ref": "#/definitions/EF_bin_data"
        }
      ]
    },
    "EF_bin_data": {
      "type": "object",
      "required": [
        "fcp",
        "bin_data"
      ],
      "properties": {
        "fcp": {
          "$ref": "#/definitions/hex_string"
        },
        "bin_data": {
          "$ref": "#/definitions/hex_string"
        }
      },
      "not": {
        "required": ["records"]
      }
    },
    "EF_with_records": {
      "type": "object",
      "required": [
        "fcp",
        "records"
      ],
      "properties": {
        "records": {
          "type": "object",
          "patternProperties": {
            "^[a-fA-F0-9]{2}$": {
              "$ref": "#/definitions/hex_string"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        },
        "fcp": {
          "$ref": "#/definitions/hex_string"
        }
      },
      "not": {
        "required": ["bin_data"]
      }
    },
    "FCI": {
      "type": "string",
      "pattern": "^No FCI on Calypso rev1 cards$|^6F(?:[0-9a-fA-F]{2})+$"
    },
    "FCP": {
      "type": "string",
      "pattern": "^8517([0-9a-fA-F]){46}$"
    },
    "CalypsoContainers": {
      "type": "object",
      "properties": {
        "aid": {
          "$ref": "#/definitions/hex_string"
        },
        "csn": {
          "$ref": "#/definitions/hex_string"
        },
        "fci": {
          "$ref": "#/definitions/FCI"
        },
        "fcp": {
          "$ref": "#/definitions/FCP"
        },
        "session_modifications": {
          "$ref": "#/definitions/byte"
        },
        "platform":{
          "$ref": "#/definitions/byte"
        },
        "app_type": {
          "$ref": "#/definitions/byte"
        },
        "app_subtype":{
          "$ref": "#/definitions/byte"
        },
        "issuer": {
          "$ref": "#/definitions/byte"
        },
        "version":{
          "$ref": "#/definitions/byte"
        },
        "revision": {
          "$ref": "#/definitions/byte"
        },
        "status": {
          "$ref": "#/definitions/byte"
        },
        "type": {
          "$ref": "#/definitions/byte"
        },
        "access_conditions": {
          "$ref": "#/definitions/access_conditions"
        },
        "key_indexes": {
          "$ref": "#/definitions/key_indexes"
        },
        "lid": {
          "$ref": "#/definitions/two_bytes"
        },
        "efs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EF"
          }
        }
      },
      "required": [
        "fci",
        "fcp"
      ]
    },
    "CalypsoPO": {
      "type": "object",
      "properties": {
        "containers": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/CalypsoContainers"
          }
        }
      }
    },
    "dump_info": {
      "type": "object",
      "properties": {
        "schema_version": {
          "title": "Version of the schema for this dump",
          "type": "string",
          "pattern": "^(([0-9]+)\\.([0-9]+))$"
        },
        "date": {
          "title": "Date when the support was dumped",
          "type": "string",
          "format": "date-time"
        },
        "comments": {
          "title": "Free comments",
          "type": "string"
        }
      },
      "required": [
        "schema_version",
        "date"
      ]
    },
    "communication" : {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["contactLess", "contact"]
        },
        "ATQ/ATR": {
          "$ref": "#/definitions/hex_string"
        }
      },
      "if": {
        "properties": {
          "mode" : {
            "const": "contactLess"
          }
        }
      },
      "then": {
        "properties": {
          "protocol": {
            "type": "string",
            "enum": ["ISO_A", "ISO_B", "BPrime"]
          }
        }
      },
      "else": {
        "properties": {
          "protocol": {
            "type": "string",
            "enum": ["T=0", "T=1", "HSP"]
          }
        }
      }
    }
  },
  "required": [
    "technical_data",
    "dump_data"
  ]
}